<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/noteimage"
        android:paddingTop="15sp"
        android:paddingBottom="35sp">

    <EditText
        android:id="@+id/text_editor2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|top"
        android:paddingLeft="30sp"
        android:paddingTop="35sp"
        android:paddingRight="42sp"
        android:paddingBottom="35sp"
        android:inputType="textLongMessage|textCapSentences|textMultiLine"
        android:textAlignment="gravity"
        android:autoText="false"
        android:textColor="#ff29b3ff"
        android:background="@android:color/transparent"
        />

</ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:text="返回"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonDiaryBack"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="26dp"
            android:layout_marginEnd="26dp"
            android:layout_marginBottom="24dp"
            android:visibility="invisible"/>
    </RelativeLayout>

</FrameLayout>